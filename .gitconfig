[user]
	email = orionldevoe@gmail.com
	name = Liam DeVoe
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential]
	helper = osxkeychain
[alias]
lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
lg = !"git lg1"
find = log --pretty=\"format:%Cgreen%H %Cblue%s\" --name-status --grep
nuke = !"git reset --hard && git clean -xfd -e .vscode/ -e .cursor/ -e .claude/"
whatadded = log --diff-filter=A --pretty=format:"%H"
whatchanged = log --follow
children = "!bash -c 'c=${1:-HEAD}; set -- $(git rev-list --all --not \"$c\"^@ --children | grep $(git rev-parse \"$c\") ); shift; echo $1' -"

[pull]
	rebase = false
[core]
	excludesfile = /Users/tybug/.gitignore
	autocrlf = input
[diff]
    algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[column]
	ui = auto
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[init]
	defaultBranch = master
[merge]
	conflictstyle = zdiff3
[safe]
	directory = /Volumes/Backup/computer backups
[feature]
	manyFiles = true
